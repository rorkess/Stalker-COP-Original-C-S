actor_proxy         = actor_proxy.actor_proxy()
actor               = nil
trader				= nil
heli                = {}
heli_enemies        = {}
heli_enemy_count    = 0
zone_by_name        = {}
script_ids			= {}
storage             = {}
camp_storage        = {}
story_by_id	        = {}
smart_terrain_by_id = {}
info_restr          = {}
strn_by_respawn     = {}
anim_obj_by_name	= {}
goodwill 			= {sympathy = {}, relations = {}}
story_object		= {}
signal_light		= {}
offline_objects		= {}
anomaly_by_name     = {}
level_doors 		= {}  -- Содержит список всех дверей на уровне (чтобы нпс могли по нему пробегаться и открывать двери, рядом с которыми они стоят.
no_weap_zones 		= {}
spawned_vertex_by_id= {}

